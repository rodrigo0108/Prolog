<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Prolog" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/prolog_primary_color</item>
        <item name="colorPrimaryVariant">@color/prolog_primary_color_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/prolog_secondary_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>

    <style name="style_title_30_bold">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/size_30_sp</item>
    </style>

    <style name="style_title_25_bold" parent="style_title_30_bold">
        <item name="android:textSize">@dimen/size_25_sp</item>
    </style>

    <style name="style_title_22_bold" parent="style_title_30_bold">
        <item name="android:textSize">@dimen/size_22_sp</item>
    </style>

    <style name="style_title_primary_22_bold" parent="style_title_30_bold">
        <item name="android:textSize">@dimen/size_22_sp</item>
        <item name="android:textColor">@color/prolog_primary_color_dark</item>
    </style>

    <style name="style_title_28_bold" parent="style_title_30_bold">
        <item name="android:textSize">@dimen/size_28_sp</item>
    </style>

    <style name="style_title_secondary_22_bold">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/prolog_secondary_color</item>
        <item name="android:textSize">@dimen/size_22_sp</item>
    </style>
    <style name="style_title_secondary_15_bold" parent="style_title_secondary_22_bold">
        <item name="android:textSize">@dimen/size_15_sp</item>
    </style>
    <style name="style_title_secondary_17_bold" parent="style_title_secondary_22_bold">
        <item name="android:textSize">@dimen/size_17_sp</item>
    </style>
    <style name="style_title_secondary_28_bold" parent="style_title_secondary_22_bold">
        <item name="android:textSize">@dimen/size_28_sp</item>
    </style>
    <style name="style_title_secondary_33_bold" parent="style_title_secondary_22_bold">
        <item name="android:textSize">@dimen/size_28_sp</item>
    </style>
    <style name="style_subtitle_18_bold">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/prolog_primary_color_dark</item>
        <item name="android:textSize">@dimen/size_18_sp</item>
    </style>
    <style name="style_subtitle_15_bold" parent="style_subtitle_18_bold">
        <item name="android:textSize">@dimen/size_15_sp</item>
    </style>

    <style name="style_subtitle_14_bold" parent="style_subtitle_18_bold">
        <item name="android:textSize">@dimen/size_14_sp</item>
    </style>

    <style name="style_subtitle_20_bold" parent="style_subtitle_18_bold">
        <item name="android:textSize">@dimen/size_20_sp</item>
    </style>
    <style name="style_description_14_regular">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/prolog_primary_color_dark</item>
        <item name="android:textSize">@dimen/size_14_sp</item>
    </style>
    <style name="style_description_15_regular" parent="style_description_14_regular">
        <item name="android:textSize">@dimen/size_15_sp</item>
    </style>
    <style name="style_description_11_regular" parent="style_description_14_regular">
        <item name="android:textSize">@dimen/size_11_sp</item>
    </style>

    <style name="style_mini_title_12_regular" parent="style_description_14_regular">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/prolog_date_type_day_color</item>
        <item name="android:textSize">@dimen/size_12_sp</item>
    </style>

    <style name="style_day_legend_regular">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/prolog_name_day_color</item>
        <item name="android:textSize">@dimen/size_10_sp</item>
    </style>

    <style name="style_input_layout_white_login">
        <item name="android:textColorHint">@android:color/white</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">@android:color/white</item>
        <item name="startIconTint">@android:color/white</item>
    </style>
    <style name="style_input_layout_white_login_password" parent="style_input_layout_white_login">
        <item name="passwordToggleDrawable">@drawable/selector_password_icon</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@android:color/white</item>
    </style>
    <style name="style_transparent_button_with_stroke">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/prolog_primary_color_dark</item>
        <item name="android:textSize">@dimen/size_13_sp</item>
        <item name="strokeColor">@color/prolog_primary_color_dark</item>
        <item name="cornerRadius">@dimen/size_19</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_dialog</item>
    </style>

    <style name="DialogLoaderTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>