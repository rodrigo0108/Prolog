<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/hourTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="9:00"
        android:textColor="@color/prolog_primary_color_dark"
        android:fontFamily="@font/opensans_regular"
        android:textSize="@dimen/size_12_sp"
        android:layout_marginStart="@dimen/size_22"
        android:layout_marginEnd="@dimen/size_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/breakTextView"
        app:layout_constraintBottom_toBottomOf="@+id/breakTextView"
        app:layout_constraintEnd_toStartOf="@+id/breakTextView"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/breakTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_22"
        android:background="@drawable/bg_break_time"
        android:textSize="@dimen/size_16_sp"
        android:fontFamily="@font/opensans_bold"
        android:textColor="@color/white"
        android:padding="@dimen/size_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/subtitle_break"
        app:layout_constraintStart_toEndOf="@+id/hourTextView"
        android:layout_marginBottom="@dimen/size_19"/>

</androidx.constraintlayout.widget.ConstraintLayout>