<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.heyoh.prolog">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name="com.heyoh.prolog.App"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.Prolog">
        <activity android:name="com.heyoh.prolog.feature.recentbooks.RecentBookActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.heyoh.prolog.feature.profile.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.heyoh.prolog.feature.menu.MenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.heyoh.prolog.feature.login.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".splash.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>